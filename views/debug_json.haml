!!!
%html
  %head
    %meta{charset: 'utf-8'}/
    %link{href: '/stylesheets/style.css', rel: 'stylesheet', type: 'text/css'}/

  %body.with-3d-shadow.with-transitions
    %p
      - if @count
        %b logs found: #{@count}
      - if @filter
        (filter: #{@filter})
    %p
      - Array(@data).each do |set|
        - if set.respond_to? :data
          - if set.data['payload']['uniqueId']
            Stream uniqueId:
            %a{href: "/api/debug/query?data.payload.uniqueId=#{set.data['payload']['uniqueId']}"}
              = set.data['payload']['uniqueId']
            %br/

          - if set.data['payload']['farIp']
            Client address:
            %a{href: "/api/debug/query?data.payload.farIp=#{set.data['payload']['farIp']}&data.payload.farPort=#{set.data['payload']['farPort']}" }
              = "#{set.data['payload']['farIp']}:#{set.data['payload']['farPort']}"
            %br/

          %div.debug
            %pre
              = preserve do
                = JSON.pretty_generate(set.data)

        - else
          %div.debug
            %pre
              = preserve do
                = set
